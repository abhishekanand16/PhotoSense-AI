{
  "build": {
    "beforeDevCommand": "npm --prefix ../../../apps/desktop run dev",
    "beforeBuildCommand": "npm --prefix ../../../apps/desktop run build",
    "devPath": "http://localhost:1420",
    "distDir": "../../../apps/desktop/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "PhotoSense-AI",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "scope": [
          "$APPDATA/**",
          "$DOCUMENT/**",
          "$PICTURE/**",
          "**"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/**",
          "$DOCUMENT/**",
          "$PICTURE/**",
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.photosense.ai",
      "icon": [
        "../../../apps/desktop/src-tauri/icons/32x32.png",
        "../../../apps/desktop/src-tauri/icons/128x128.png",
        "../../../apps/desktop/src-tauri/icons/128x128@2x.png",
        "../../../apps/desktop/src-tauri/icons/icon.icns",
        "../../../apps/desktop/src-tauri/icons/icon.ico"
      ],
      "externalBin": [
        "bin/photosense-backend"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PhotoSense-AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
