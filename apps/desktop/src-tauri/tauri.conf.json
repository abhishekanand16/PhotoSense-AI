{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "PhotoSense-AI",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/photosense-backend",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "scope": [
          "$APPDATA/**",
          "$APPDATA/PhotoSense-AI/**",
          "$DOCUMENT/**",
          "$PICTURE/**",
          "**"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/**",
          "$APPDATA/PhotoSense-AI/**",
          "$DOCUMENT/**",
          "$PICTURE/**",
          "**"
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.photosense.ai",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/photosense-backend"
      ],
      "resources": [
        "binaries/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PhotoSense-AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}